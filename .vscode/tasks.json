{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Frontend Production",
      "type": "npm",
      "script": "build",
      "path": "frontend/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },

     {
      "label": "Start Vite Dev Server",
      "type": "npm",
      "script": "dev",
      "path": "frontend/",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:.*5173"
        }
      }
    },
    {
      "label": "TypeScript Build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "TypeScript Watch",
      "type": "shell",
      "command": "npm",
      "args": ["run", "watch"],
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}