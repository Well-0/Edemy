{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Electron App",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": ["."],
      "outputCapture": "std",
      "preLaunchTask": "TypeScript Build"
    },
    {
      "name": "NPM Auto-Rebuild",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": ["run", "watch"],
      "outputCapture": "std"
    }
    
  ]
}