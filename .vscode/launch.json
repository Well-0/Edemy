{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Launch Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "Start Vite Dev Server",
      
    
    },
    {
      "name": "NPM Run Build",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "args": ["run", "build"],
      "outputCapture": "std",
      "console": "integratedTerminal"
    },

    {
      "name": "Run Electron App",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": ["."],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "preLaunchTask": "TypeScript Build"
    },
    {
      "name": "NPM Auto-Rebuild",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": ["run", "watch"],
      "outputCapture": "std"
    }
    
  ]
}