{
  "version": "0.2.0",
  "configurations": [
      {
      "name": "Start Frontend (Production)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "args": ["start"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "preLaunchTask": "Build Frontend Production"
    },
    
    {
      "name": "Launch Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "Start Vite Dev Server",
      
    
    },
    {
      "name": "NPM Run Build",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "args": ["run", "build"],
      "outputCapture": "std",
      "console": "integratedTerminal"
    },

    {
      "name": "Run Electron App",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": ["."],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "preLaunchTask": "TypeScript Build"
    },
    
    {
      "name": "Run test_parser",
      "type":  "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\build\\test_parser.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "CMake: Build test_parser",
      "console": "integratedTerminal"
    },
  {
    "name": "Run edemy_backend",
    "type": "cppvsdbg",
    "request": "launch",
    "program": "${workspaceFolder}\\build\\edemy_backend.exe",  // Remove Release/
    "args": [],
    "cwd": "${workspaceFolder}",
    "preLaunchTask": "CMake: Build edemy_backend",
    "console": "integratedTerminal"
  },
    {
      "name": "NPM Auto-Rebuild",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": ["run", "watch"],
      "outputCapture": "std"
    }
    
  ]
}